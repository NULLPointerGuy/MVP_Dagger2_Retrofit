<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.karthik.myapplication.Screens.Todo.TodoActivity"
        tools:deviceIds="wear"
        android:padding="@dimen/box_inset_layout_padding"
        android:backgroundTint="@color/colorPrimary">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:boxedEdges="top">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:padding="@dimen/add_todo_padding">
            <EditText
                    android:id="@+id/todoTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:maxLines="2"
                    android:hint="@string/todo_title"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/add_todo_text_size"/>
            <ImageButton
                    android:id="@+id/save"
                    android:layout_width="@dimen/add_todo_send_icon"
                    android:layout_height="@dimen/add_todo_send_icon"
                    android:src="@drawable/send"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"/>
    </LinearLayout>
</android.support.wear.widget.BoxInsetLayout>